<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShopApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ShopApp.Views"
    Shell.FlyoutBehavior="Flyout"
    xmlns:info="clr-namespace:Microsoft.Maui.ApplicationModel;assembly=Microsoft.Maui.Essentials"
    Title="ShopApp">

    <Shell.FlyoutHeader>
        <Image
            Source="dotnet_bot.svg"
            WidthRequest="120"
            Margin="10"/>
    </Shell.FlyoutHeader>

    <Shell.FlyoutFooter>
        <VerticalStackLayout Padding="10">
            <Label Text="{x:Static info:AppInfo.Name}" />
            <Label Text="{x:Static info:AppInfo.VersionString}" />
        </VerticalStackLayout>
    </Shell.FlyoutFooter>

    <ShellContent
         Title="Acerca de mi tienda"
         ContentTemplate="{DataTemplate views:AboutPage}"
         Route="AboutPage" />

    <ShellContent
          Title="Resumen de Ventas"
          ContentTemplate="{DataTemplate views:ResumenPage}"
          Route="ResumenPage" />

    <FlyoutItem Title="ConfiguraciÃ³n">
        
        <Tab Title="Resumen">
            <ShellContent
               Title="Data System"
               ContentTemplate="{DataTemplate views:MainPage}"
               Route="MainPage" />  
        </Tab>
        
        <Tab Title="Productos">
            <ShellContent
                 Title="Productos"
                 ContentTemplate="{DataTemplate views:ProductsPage}"
                 Route="ProductsPage" />
        </Tab>

        <Tab Title="Categirias">
            <ShellContent
                  Title="Categirias"
                  ContentTemplate="{DataTemplate views:CategoriesPage}"
                  Route="CategoriesPage" />
        </Tab>

        <Tab Title="Clientes">
            <ShellContent
                  Title="Clientes"
                  ContentTemplate="{DataTemplate views:ClientsPage}"
                  Route="ClientsPage" />
        </Tab>

    </FlyoutItem>

    <ShellContent
         Title="Ayuda y Soporte"
         ContentTemplate="{DataTemplate views:HelpSupportPage}"
         Route="HelpSupportPage" />

    <MenuItem
        Text="Abrir Pagina"
        Clicked="MenuItem_Clicked" />

    <FlyoutItem Title="Venta de Inmuebles">

        <Tab Title="Resumen" Icon="home_icon.png">
            <ShellContent 
                Title="Resumen"
                ContentTemplate="{DataTemplate views:HomePage}"
                Route="HomePage"
                />
        </Tab>

        <Tab Title="Guardados" Icon="bookmark_icon.png">
            <ShellContent 
                Title="Guardados"
                ContentTemplate="{DataTemplate views:BookmarkPage}"
                Route="BookmarkPage"
                />
        </Tab>

        <Tab Title="Configuracion" Icon="settings_icon.png">
            <ShellContent 
                Title="Configuracion"
                ContentTemplate="{DataTemplate views:SettingsPage}"
                Route="SettingsPage"
                />
        </Tab>

    </FlyoutItem>

</Shell>
